<launch>
    <arg name="image" default="/usb_cam/image_raw"/>
    <arg name="camera" default="usb_cam"/>



    <node name="calib" pkg="camera_calibration" type="cameracalibrator.py"
    args="--size 7x7
          --square 0.0213
          --pattern=chessboard
          --no-service-check
          image:=$(arg image)
          camera:=$(arg camera)"
          output="screen">
    </node>
</launch>